<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ _config.title.name ?? 'GemsTracker 2' }}{{ title_breadcrumbs ?? '' }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <base href="{{ path('home') }}" />
    {{ include('@gems/vite.html.twig') }}
    {% block header %}
    {% endblock %}
</head>
<body
        {% if current_identity is defined %}
            data-max-idle-time="{{ _config.max_idle_time }}"
            data-auth-poll-interval="{{ _config.auth_poll_interval }}"
        {% endif %}
>
<div id="container" class="container-fluid">
    {% block head %}
        <header>
            <div class="logo {{ current_organization_code ?? '' }} no-print"></div>
            <div class="application-title">{{ include('@layout/application-title.html.twig') }}</div>
            <div class="tools no-print">
                {{ include('@layout/organization-switcher.html.twig') }}
                {{ include('@layout/group-switcher.html.twig') }}
                {{ include('@layout/auth-info.html.twig') }}
                {% if locale is defined %}{{ include('@layout/languages.html.twig') }}{% endif %}
            </div>
        </header>
    {% endblock %}

    {% if mainMenu is defined and mainMenu.isHorizontal() %}
        <div id="main-menu" role="navigation no-print">
            {{ mainMenu.renderMainRow()|raw }}
        </div>
    {% endif %}
    <div class="content">
        {% if mainMenu is defined %}
        <div id="menu" class="no-print" role="navigation">
            {{ mainMenu.renderMenu()|raw }}
        </div>
        {% endif %}
        <div id="main-container" class="include-menu">
            <div id="main">
                {% if breadcrumbs is defined %}{{ include('@layout/breadcrumbs.html.twig') }}{% endif %}
                {% if statusMessenger is defined %}{{ include('@layout/flash-messages.html.twig') }}{% endif %}

                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
    {% block foot %}
    <footer>
        {{ include('@layout/footer.html.twig') }}
    </footer>
    {% endblock %}
</div>
{% if idle_check %}
    {{ include('@layout/auth-idle-checker.html.twig') }}
{% endif %}
<div id="menu-bar" class="no-print">
    <button id="menu-toggle">
        <span class="material-symbols-outlined">menu</span>
    </button>
</div>
<div id="backdrop"></div>
</body>
</html>
