{% extends '@gems/layout.html.twig' %}

{% block content %}
    {% if errors|length > 0 %}
        <div class="errors">
            {% for error in errors %}
                <div class="alert alert-danger">
                    {{ error }}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <form method="post">
        <div class="form-group">
            <label class="control-label" for="tfa_code">{{ trans.tfa_code }}</label>
            <input type="password" class="form-control" name="tfa_code" id="tfa_code">
        </div>

        <button type="submit" class="btn btn-primary">{{ trans.continue }}</button>
    </form>
{% endblock %}
