{% extends '@gems/layout.html.twig' %}

{% block content %}
    <form method="post">
        {{ csrf() }}

        <div class="form-group">
            <label class="control-label" for="tfa_code">{{ trans.code_input_label }}</label>
            <input
                    type="password"
                    class="form-control"
                    name="tfa_code"
                    id="tfa_code"
                    minlength="{{ code_min_length }}"
                    maxlength="{{ code_max_length }}"
                    size="{{ code_max_length + 2 }}"
            >
            <p class="description">{{ trans.code_input_description }}</p>
        </div>

        <button type="submit" class="btn btn-primary">{{ trans.continue }}</button>

        {% if sendable %}
            <button type="submit" name="resend" class="btn btn-secondary">{{ trans.resend_code }}</button>
        {% endif %}
    </form>
{% endblock %}
